{
    "ConnectionStrings": {
        "DefaultConnection": "Server=10.0.2.88,1433;Database=ECommerceDB;User Id=sqlatx;Password=ATXSql123!@#;TrustServerCertificate=true;MultipleActiveResultSets=true;",
        "DirectConnection": "Server=3.67.133.184,1433;Database=ECommerceDB;User Id=sqlatx;Password=ATXSql123!@#;TrustServerCertificate=true;MultipleActiveResultSets=true;",
        "LocalConnection": "Server=localhost,1433;Database=ECommerceDB;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true;"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "Microsoft.EntityFrameworkCore": "Information",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/ecommerce-api-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ]
    },
    "AllowedHosts": "*",
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:5000"
            },
            "Https": {
                "Url": "https://0.0.0.0:5001"
            }
        }
    },
    "ApiSettings": {
        "DefaultPageSize": 10,
        "MaxPageSize": 100,
        "EnableDetailedErrors": true,
        "EnableSensitiveDataLogging": false
    },
    "HealthChecks": {
        "UI": {
            "HealthChecksUIEnabled": true,
            "HealthChecksUIPath": "/health-ui"
        }
    }
}